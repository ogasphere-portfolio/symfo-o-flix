{% extends 'admin/base_admin.html.twig' %}

{% block title %}TvShow index{% endblock %}

{% block body %}
    <h1>TvShow index</h1>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Synopsys</th>
                <th>Image</th>
                <th>Nb Likes</th>
                <th>Publié le</th>
                <th>Créer le </th>
                <th>Modifié le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tv_show in tv_shows %}
            <tr>
                <td>{{ tv_show.id }}</td>
                <td>{{ tv_show.title }}</td>
                <td>{{ tv_show.synopsys }}</td>
                <td><img src="{{ tv_show.image}}" alt="titre"  style="width:50%"/></td>
                <td>{{ tv_show.nbLikes }}</td>
                <td>{{ tv_show.publishedAt ? tv_show.publishedAt|date('Y-m-d') : '' }}</td>
                <td>{{ tv_show.createdAt ? tv_show.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ tv_show.updatedAt ? tv_show.updatedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('admin_tv_show_show', {'id': tv_show.id}) }}">show</a>
                    <a href="{{ path('admin_tv_show_edit', {'id': tv_show.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('admin_tv_show_new') }}">Create new</a>
{% endblock %}
