{% extends 'backoffice/base_backoffice.html.twig' %}

{% block title %}Category list {{ parent() }}{% endblock %}

{% block body %}

<div class="container">
{{ include('_partials/_flash_messages.html.twig') }}

<h1>Category list</h1>
<div class="text-end">
<a href="{{ url('backoffice_category_add') }}" class="btn btn-primary">Create</a>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
{% for category in category_list %}
    <tr>
      <th scope="row">{{ category.id }}</th>
      <td>{{ category.name }}</td>
      <td>
        <a class="btn btn-primary" href="{{ url('backoffice_category_read', {"id": category.id}) }}">Edit</a>
        <a class="btn btn-primary" href="{{ url('backoffice_category_edit', {"id": category.id}) }}">Edit</a>

        <div class="btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            Delete
            </button>
            <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <li><a class="dropdown-item" href="{{ url('backoffice_category_delete', {"id": category.id}) }}">Yes I am sure !</a></li>
                <li><a class="dropdown-item" href="#">Nope</a></li>
            </ul>
        </div>
      </td>
    </tr>
{% endfor %}
  </tbody>
</table>
</div>
{% endblock %}
